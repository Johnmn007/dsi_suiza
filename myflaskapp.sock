[Unit]
Description=Gunicorn instance to serve my Flask app
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/home/mi_appglob
ExecStart=/home/mi_appglob/dsienv/bin/gunicorn --workers 3 --bind unix:/home/mi_appglob/myflaskapp.sock -m 007 app:app

[Install]
WantedBy=multi-user.target